{-
expand stars: to expand stars, need to type check because of funtrefs
but can't run ag on newly constructed identifiers in same pass, so for
now just expand the stars in a separate pass
-}

{
expandStarsStatements :: Catalog -> [Statement] -> [Statement]
expandStarsStatements cat sts =
    let t = sem_Root (Root sts)
        ta = wrap_Root t Inh_Root {cat_Inh_Root = cat
                                  {-,lib_Inh_Root = emptyBindings
                                  ,idenv_Inh_Root = emptyIDEnv "tcs"-}}
        tl = expandedStars_Syn_Root ta
    in case tl of
         Root r -> r
}

-- the types and errors are pulled out of the attributes, which
-- are set by the sem for each type/ ctor in the various files in
-- TypeChecking/ and put into the annotated tree output

attr Annotation
  inh tpe :: {Either [TypeError] Type}

sem Annotation
  | Annotation
      lhs.annotatedTree =
          let t = either (const Nothing) Just @lhs.tpe
              es = either id (const []) @lhs.tpe
          in Annotation @asrc t es @implicitCast @stType @catUpd


