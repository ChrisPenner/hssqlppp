                     in if length badts == 0
                          then Nothing
                          else Just (f, badts)
                    ) allOpsAndFns
    where
      knownType :: Type -> Bool
      knownType l = case l of
                      Pseudo _ -> True
                      t@(ScalarType _) -> t `elem` defaultTypeNames
                      ArrayType t -> knownType t
                      SetOfType t -> knownType t

