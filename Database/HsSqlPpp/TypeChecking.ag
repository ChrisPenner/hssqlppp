SEM SelectExpression
    | Values Select CombineSelect
        loc.nt = case @loc.tpe of
                   Left _ -> TypeCheckFailed
                   Right TypeCheckFailed -> TypeCheckFailed
                   Right t -> t
        loc.typeErrors = case @loc.tpe of
                          Left a@(_) -> [a]
