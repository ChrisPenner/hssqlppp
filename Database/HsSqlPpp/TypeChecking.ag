SEM Statement
    | Update
        lhs.nodeType =
          checkErrors [checkTableExists @lhs.scope @table
                      ,@whr.nodeType
                      ,@assigns.nodeType
                      ,checkColumnConsistency @lhs.scope
                                              @table colNames colTypes]
