Name:                hssqlppp
Version:             0.0
Description:         Sql parser and pretty printer
License:             BSD3
License-file:        LICENSE
Author:              Jake Wheat
Maintainer:          jakewheatblog@gmail.com
Build-Type:          Simple
Cabal-Version:       >=1.2

extra-source-files:  README,
                     TODO,
                     LICENSE
Library
  Build-Depends:     base,
                     mtl,
                     parsec >= 3,
                     pretty
  Exposed-modules:   Parser, PrettyPrinter


Executable HsSqlSystem
  Main-is:           HsSqlSystem.lhs
  Build-Depends:     base,
                     haskell98,
                     regex-posix,
                     HDBC,
                     HDBC-postgresql,
                     directory
  Other-Modules:     Parser, PrettyPrinter

Executable Tests
  Main-is:           Tests.lhs
  Build-Depends:     base,
                     HUnit,
                     test-framework,
                     test-framework-hunit

  Other-Modules:     Parser, PrettyPrinter
